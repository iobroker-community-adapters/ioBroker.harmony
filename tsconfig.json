{
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "node",
        "baseUrl": "./",
        "allowSyntheticDefaultImports": true,
        "checkJs": false,
        "noEmit": false,
        "outDir": "./build",
        "sourceMap": true,
        "sourceRoot": "./src",
        "noImplicitAny": true,
        "skipLibCheck": true,
        "lib": ["es2018", "DOM"],
        "types": ["@iobroker/types" ,"node", "mocha", "chai"],
    },
    "exclude": [
        "**/node_modules",
        "**/build",
        "src/**/*.test.ts"
    ],
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "eslint.config.mjs"
    ],
}
